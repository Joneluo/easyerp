@using EasyERP.Web.Framework
@model EasyERP.Web.Models.Stores.StoreModel
@{
    ViewBag.Title = "Edit";
}
@section SectionTitle
{
    <h1 id="crmTitle">
        <strong style="font-size: smaller">编辑门店信息 - </strong>
        <strong class="pdt-nm">@Model.Name</strong>
        <strong class="pdt-back">
            <i class="fa fa-reply"></i> 
            @Html.ActionLink("回到门店列表", "List")
        </strong>
</h1>
}


@using (Html.BeginForm(null, null, FormMethod.Post, new
{
    id = "store-form"
}))
{
    @Html.AntiForgeryToken()
    <div class="section-header">
        <div class="title">
            
        </div>
        <div class="row m-b">
            <div class="col-md-4">
                <span id="store-delete" class="k-button"><i class="fa fa-times" style=" color: #EA394C;"></i>删除该门店信息</span>               
            </div>
            <div class="col-md-4">
                <input type="submit" name="save" class="k-button btn-submit" style="padding-left:1.5em; padding-right:1.5em;" value="保存" />
            </div>
            </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
@Html.DeleteConfirmation("store-delete")