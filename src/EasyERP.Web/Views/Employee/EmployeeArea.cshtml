@using System.Web.Optimization
@model EasyERP.Web.Models.Employee.EmployeeModel
<div class="row m-b" style="margin-bottom:1.5em;">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <button type="submit" class="k-button btn-submit" style="padding-left:1.5em; padding-right:1.5em;">保存</button>
    </div>
    <div class="col-md-4"></div>
    

</div>

@Html.HiddenFor(m => m.Id)
<div class="row emp-info">
    <div class="form-group col-md-3">
        @Html.ValidationMessageFor(m => m.Name, "", new
    {
        @class = "text-danger"
    })
        @Html.LabelFor(m => m.Name, new
    {
        @class = ""
    })
        @Html.TextBoxFor(m => m.Name, new
    {
        @class = ""
    })
    </div>
    <div class="form-group col-md-3">
        @Html.LabelFor(m => m.Male, new
    {
        @class = ""
    })
      
            @Html.RadioButtonFor(m => m.Male, true, new
    {
        @checked = "checked"
    })男

            @Html.RadioButtonFor(m => m.Male, false)女
      
    </div>
    <div class="form-group col-md-3">
        @Html.LabelFor(m => m.Married, new
    {
        @class = ""
    })
        @Html.RadioButtonFor(m => m.Married, true, new
    {
        @checked = "checked"
    })已婚

        @Html.RadioButtonFor(m => m.Married, false)未婚

    </div>
    
    
    
</div>

